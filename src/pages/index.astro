---

<Layout title="Nodejs by Example">
  <main>
    <header>Nodejs by Example</header>
    <div class="desc"></div>
    <ul>
      {
        postList.map((item) => (
          <li>
            <a href={`${item.url}`}>{item.name}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style lang="less">
  main {
    width: 420px;
    min-width: 420px;
    max-width: 420px;
    margin-left: auto;
    margin-right: auto;
  }
  header {
    font-size: 32px;
    line-height: 40px;
    margin-top: 40px;
    margin-bottom: 20px;
  }
  ul {
    a {
      text-decoration: underline;
    }
  }
</style>
