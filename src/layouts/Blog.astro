---
import Layout from "./Layout.astro";
import CopyButton from "../components/CopyButton.astro";
import Footer from "../components/Footer.astro";

import NextPostLink from "../components/NextPostLink.astro";
const { title } = Astro.props;
---

<Layout title={title}>
  <h1 class="title">
    <a href="/">Nodejs by Example</a>: <slot name="title" />
  </h1>
  <div class="lead">
    <slot name="head" />
  </div>
  <div class="blog-content">
    <div class="comment-wrapper">
      <slot name="comment" />
    </div>
    <div class="code-wrapper">
      <CopyButton />
      <slot name="code" />
    </div>
  </div>
  <slot />
  <NextPostLink currentUrl={Astro.url.pathname} />
  <Footer/>
</Layout>

<style lang="less">
  .title {
    font-size: 32px;
    line-height: 40px;
    margin-top: 40px;
    margin-bottom: 15px;
  }
  .blog-content {
    display: flex;
  }
  .line {
    border-bottom: 1px solid white !important;
  }
  .comment-wrapper,
  .lead {
    padding-right: 20px;
    width: 420px;
  }
  .code-wrapper {
    width: 500px;
    // font-size: 14px;
    position: relative;
  }
  .lead {
    margin-bottom: 16px;
  }
</style>
<style is:global lang="less">
  .code-wrapper {
    .copy-code-container {
      opacity: 0;
    }
    &:hover {
      .copy-code-container {
        opacity: 1;
      }
    }
  }
</style>
